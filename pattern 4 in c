#include <stdio.h>

int main() {
    int rows;

    printf("Enter the number of rows: ");
    scanf("%d", &rows);

    for (int i = 1; i <= rows * 2 - 1; i++) {
        int a= (i <= rows) ? i : rows * 2 - i;

        for (int j = 0; j < a; j++) {
            printf("*");
        }

        printf("\n");
    }

    return 0;
}
